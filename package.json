{
  "name": "@public-tech/express-helpers",
  "version": "0.1.5",
  "description": "Helper classes for express",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "src/"
  ],
  "scripts": {
    "cover": "nyc npm test",
    "lint": "npx eslint --fix --ignore-path .gitignore . &&  prettier --config=package.json --write ./src/**/*.js",
    "test": "mocha -c --reporter=spec --recursive \"test/**/*.spec.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "semi": true,
    "printWidth": 120,
    "arrowParens": "always",
    "jsxBracketSameLine": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/public-tech/express-helpers.git"
  },
  "keywords": [
    "express",
    "async",
    "await",
    "helper",
    "routes"
  ],
  "author": "Andy Richardson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/public-tech/express-helpers/issues"
  },
  "homepage": "https://github.com/public-tech/express-helpers#readme",
  "dependencies": {
    "debug": "3.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "husky": "^1.2.0",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "nyc": "^13.1.0",
    "prettier": "^1.15.2",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.3.0",
    "supertest": "^3.3.0"
  }
}
